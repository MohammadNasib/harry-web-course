extends base.pug

block scripts
    script(src="../static/script.js")

block style
    style
        include ../static/style.css
        include ../static/styleContact.css

block content
    h1 Contact Us
    form(action="/contact",method='post',class='myForm')
        input(type="text",class='myInput',name='name',placeholder='Enter ur name',onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter ur name'")

        input(type="age",class='myInput',name='age',placeholder='Enter ur age',onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter ur age'")

        input(type="gender",class='myInput',name='gender',placeholder='Enter ur gender',onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter ur gender'")

        input(type="number",class='myInput',name='Phone',placeholder='Enter ur Phone',onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter ur Phone'")

        textarea(name="address", cols="30", rows="10",placeholder='Enter ur address',onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter ur address'")

        button(class='btn')
                | Submit
